/* pages/collection/index.wxss */
.bg-style{
  background: #f5f4f4;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.item-type{
  display: flex;
  height: 280rpx;
  margin-top: 10px;
  background: white;
  align-content: stretch;
}

.item-type image{
  height: 240rpx;
  width: 240rpx;
  margin:20rpx;
}

.item-text{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 40%;
}
.item-text text{
  height: 140rpx;
  display: block;
  align-content: center;
  margin-top: 10px;
}
.item-cancel{
  display: flex;
  background: #f60;
  width: 30%;
  text-align: center;
  font-size: 15px;
  color: white;
  justify-content: center;
}

.item-cancel text{
  align-self: center;
}