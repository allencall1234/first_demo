/* pages/leftSlide/leftSlide.wxss */

.item-wrapper{
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #f5f4f4
}

.item-list{
    position: relative;
    width: 100%;
    height: 280rpx;
    margin-top: 20rpx;
}

.item-info, .item-oper{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    margin-top: 10rpx;
}

.item-info{
    display: flex;
    z-index: 2;
    background: white;
    transition: left 0.2s ease-in-out;
    box-shadow: 1px 1px 1px #ccc;
}

.item-oper{
    display: flex;
    justify-content: flex-end;
}

.oper-delete{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    z-index: 1;
    color: white;
    background: red;
}

.info-img{
    height: 240rpx;
    width: 240rpx;
    margin: 20rpx;
    box-shadow: 1px 1px 1px #ccc;
}

.info-wrapper{
    margin-left: 20rpx;
    width: auto;
}

.info-desc{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-top: 6rpx;
}

.info-desc .name{
    font-size: 32rpx;
    color: black;
    font-weight: 600;
}

.info-desc .time{
    font-size: 24rpx;
    color: #999;
}

.info-content{
    font-size: 28rpx;
    color: #999;
    margin-top: 4rpx;
}
