/* pages/order/index.wxss */
bg-style {
  background: #f5f4f4;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.item-type {
  display: flex;
  height: 140rpx;
  background: white;
  align-content: stretch;
  padding: 5px 20px;
  border-bottom: 1rpx solid #ccc;
  flex-direction: column;
}

.item-type:first-child{
    border-top: 1rpx solid #ccc;
}

.item-type .item{
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.empty-view {
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  top: 0;
  left: 0;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
  align-items: center;
  justify-content: center;
}

