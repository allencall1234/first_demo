      <navigator data-img="{{item.image}}" data-text="{{item.name}}" bindtap='toDetailsTap' data-id="{{item.id}}">
        <image src="{{item.image}}"></image>
        <text>{{util.sub(item.name)}}</text>
      </navigator>
    </block>
  </view> -->
  <view class="navRight-main-item-list">
    <view class="goods-box" wx:for-items="{{childInfos}}" wx:key="{{index}}" bindtap="toDetailsTap" data-id="{{item.id}}">
      <view class="img-box">
        <image src="{{item.image}}" class="image" mode="aspectFill" lazy-load="true" />
      </view>
      <view class='goods-name'>{{item.name}}
      </view>
      <view class='goods-title'>
        <text>{{item.type}}</text>
        <text style='text-align:right'>{{item.sale}}</text>
      </view>
      <view class="goods-price">{{item.price}}</view>
    </view>
  </view>
</view>
<!--截取字符前6位  -->
<wxs module="util">
  var sub = function(val) {
    if (val.length > 6) {
      return val.substring(0, 6);
    }
    return val;
  }
  module.exports.sub = sub;
</wxs>