.wrapper {
  display: flex;
  background: #fff;
  width: 100%;
  height: 100%;
}

.left-wrapper {
  width: 30%;
  height: 100%;
  background: #ccc;
  border-right: 1px solid red;
}

.left-item {
  font-size: 25rpx;
  color: black;
  text-align: center;
}

.wrap {
  /* display: flex;
  background: #f8f8f8;
  width: 100%;
  height: 100%; */
}

.navLeft {
  position: absolute;
  width: 25%;
  /*border-right: 1px solid #ccc; */
  background: #fff;
  height: 100%;
}

.navLeft text {
  display: block;
  font-size: 25rpx;
  text-align: center;
  height: fit-content;
  padding-left: 10rpx;
  padding-right: 10rpx;
  min-height: 80rpx;
}

.navLeft .active {
  box-sizing: border-box;
  color: #094;
}

.navRight {
  width: 80%;
  height: 100%;
}

.navRight-main-item-list {
  position: absolute;
  right: 0;
  width: 75%;
  height: 100%;
  display: -webkit-flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-right: 5rpx;
}

.good-list {
  display: flex;
  flex-wrap: wrap;
}

.goods-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 24rpx;
}

.goods-box {
  width: 45%;
  height: 440rpx;
  background-color: #fff;
  overflow: hidden;
  margin: 10rpx;
  margin-bottom: 24rpx;
  box-shadow: 1px 1px 1px #ccc;
  border: 1rpx solid #eee;
}

.goods-box .img-box {
  width: 100%;
  height: 250rpx;
  overflow: hidden;
}

.goods-box .img-box image {
  width: 100%;
  height: 339rpx;
}

.goods-title {
  width: 100%;
  height: 25rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  padding-top: 30rpx;
  color: #000;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10rpx;
}

.goods-name {
  width: 100%;
  font-size: 22rpx;
  min-height: 50rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  padding-right: 10rpx;
  display: block;
  align-content: center;
  white-space: pre-line;
}

.goods-title text {
  width: 50%;
  color: black;
}

.goods-box .goods-price {
  width: 100%;
  overflow: hidden;
  margin-top: 20rpx;
  font-size: 22rpx;
  margin-left: 10rpx;
  color: #e64340;
}
